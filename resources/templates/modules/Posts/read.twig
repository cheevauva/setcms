{% extends "layout.twig" %}

{% block title %}Пост - {{ entity.title }}{% endblock %}

{% block content %}
    {% if entity %}
        {{ entity.id }}: {{ entity.title }}<br/>
        {{ entity.dateCreated.format('Y-m-d') }}<br/>
    {% endif %}
    {% if not model.isValid() %}
        <div>{{ model.getFirstMessage('id') }}</div>
    {% endif %}
{% endblock %}