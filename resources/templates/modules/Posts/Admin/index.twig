{% extends theme_path('layout_admin.twig') %}

{% block content_buttons_top %}
    <a href="{{ link('action_admin', {module:'Posts', action:'create'}) }}" class="btn btn-sm btn-outline-secondary">Создать запись</a>
{% endblock %}

{% block content_title %}
    <h1 class="h2">Посты</h1>
{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Тема</th>
                    <th scope="col">Действия</th>

                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.title }}</td>
                        <td>
                            <a href="{{ link('action_record_admin', {'module': entity.module, action: 'edit', 'id': entity.id}) }}">Редактировать</a>
                            <a href="{{ link('action_record', {'module': entity.module, action: 'read', 'id': entity.id}) }}" target="_blank">Просмотр</a>
                        </td>
                    </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
