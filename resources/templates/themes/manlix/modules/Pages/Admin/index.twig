{% extends theme_path('layout_admin.twig') %}
{% import theme_path('macros/controls.twig') as controls %}

{% block content_toolbar %}
    <a href="{{ link('action_admin', {module: currentModule, action:'saveform'}) }}" class="btn btn-sm btn-outline-secondary">Создать запись</a>
{% endblock %}

{% block content_title %}Страницы{% endblock %}

{% block content %}
    <div class="table-responsive">
        <form>
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Тема</th>
                        <th scope="col">Дата создания</th>
                        <th scope="col">Дата изменения</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ controls.checkbox({name: 'id[]', value: entity.id}) }}</td>
                            <td>{{ entity.title }}</td>
                            <td>{{ entity.dateCreated.format('d.m.Y H:i:s') }}</td>
                            <td>{{ entity.dateModified.format('d.m.Y H:i:s') }}</td>
                            <td>
                                <a href="{{ link('action_record_admin', {'module': entity.module, action: 'saveform', 'id': entity.id}) }}">Редактировать</a>
                                <a href="{{ link('action_record_admin', {'module': entity.module, action: 'read', 'id': entity.id}) }}">Просмотр</a>
                            </td>
                        </tr>
                    {%  endfor %}
                </tbody>
            </table>
        </form>
    </div>
{% endblock %}
