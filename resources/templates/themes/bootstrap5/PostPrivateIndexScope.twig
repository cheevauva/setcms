{% extends scShortPath('layout_admin.twig') %}

{% block content_toolbar %}
    <a href="{{ scLink('action_record_admin', {module: 'Post', action: 'new', 'id': scUUID()}) }}" class="btn btn-sm btn-outline-secondary">Создать запись</a>
{% endblock %}

{% block content_title %}Посты{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Тема</th>
                    <th scope="col">Псевдоним</th>
                    <th scope="col">Действия</th>

                </tr>
            </thead>
            <tbody>
                {% for post in entities %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.slug}}</td>
                        <td>
                            <a href="{{ scLink('action_record_admin', {'module': 'Post', action: 'edit', 'id': post.id}) }}">Редактировать</a>
                            <a href="{{ scLink('post_read_by_slug', {'module': 'Post', action: 'readBySlug', 'slug': post.slug}) }}">Просмотр</a>
                        </td>
                    </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
