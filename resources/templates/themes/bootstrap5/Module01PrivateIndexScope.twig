{% extends scShortPath('layout_admin.twig') %}
{% import scShortPath('macros/crud.twig') as crud %}

{% block content_toolbar %}
    <a href="{{ scLink('action_record_admin', {module: 'Module01', action: 'new', 'id': scUUID()}) }}" class="btn btn-sm btn-outline-secondary">Создать</a>
{% endblock %}

{% block content_title %}Module01{% endblock %}

{% block content %}
    {%  
        set rows = [
            {
                type: 'header',
                columns: [
                    {
                        type: 'checkbox',
                        name: 'id',
                        value: 'selectall'
                    },
                    {
                        type: 'text',
                        value: 'field01'
                    },
                    {
                        type: 'text',
                        value: 'Действия'
                    },
                ]
            }
        ]
    %}
    {% for entity in entities %}
        {%  
            set rows = rows|merge([{
                type: 'row',
                columns: [
                    {
                        name: 'id[]',
                        type: 'checkbox',
                        value: entity.id.uuid
                    },
                    {
                        type: 'text',
                        value: entity.field01
                    },
                    {
                        name: 'actions',
                        type: 'actions',
                        actions: [
                            {
                                label: 'Просмотр',
                                route: 'action_record_admin',
                                params: {
                                    module: 'Module01', 
                                    action: 'read',
                                    id: entity.id
                                }
                            },
                            {
                                label: 'Редактировать',
                                route: 'action_record_admin',
                                params: {
                                    module: 'Module01', 
                                    action: 'edit',
                                    id: entity.id
                                }
                            }
                        ]

                    }
                ]
            }])
        %}
    {% endfor %}

    {{ crud.crud_list({rows: rows})  }}
{% endblock %}
