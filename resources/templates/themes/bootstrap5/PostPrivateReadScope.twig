{% extends setcms.path('layout_admin.twig') %}
{% import setcms.path('macros/forms.twig') as forms %}

{% block content_title %}{{ post.title }}{% endblock %}

{% block content_toolbar %}
    <a href="{{ setcms.link('action_admin', {module: 'Post', action: 'index'}) }}" class="btn btn-sm btn-outline-secondary">Список</a> 
    <a href="{{ setcms.link('action_record_admin', {module: 'Post', action: 'edit', id: post.id}) }}" class="btn btn-sm btn-outline-secondary">Редактировать</a>
{% endblock %}

{% block content %}
    <p>
        {{ setcms.markdown(post.message)|raw }}
    </p>

    <p>
        {{ forms.input({name: 'dateCreated', value: post.dateCreated.format('d.m.Y H:i:s'), label: 'Дата создания', disabled: true}) }}
        {{ forms.input({name: 'dateModified', value: post.dateModified.format('d.m.Y H:i:s'), label: 'Дата модификации', disabled: true}) }}
    </p>
{% endblock %}