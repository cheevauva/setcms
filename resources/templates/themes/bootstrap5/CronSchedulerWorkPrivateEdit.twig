{% extends scShortPath(layout ?? 'layout_admin.twig') %}
{% import scShortPath('macros/crud.twig') as crud %}

{% block content_title %}{% if cronSchedulerWork.id %}Редактировать{% else %}Создать{% endif %}{% endblock %}
{% block content %}
    {{ 
        crud.editview({
            action: scLink(cronSchedulerWork.id ? 'AdminCronSchedulerWorkUpdate' : 'AdminCronSchedulerWorkCreate', {id: (cronSchedulerWork ? cronSchedulerWork.id : scUUID()) }),
            redirect: scLink('AdminCronSchedulerWorkRead', {id: '${cronSchedulerWork.id.uuid}'}),
            actions: {
                fields: [
                    {
                        type: 'submit',
                        label: 'Сохранить',
                    },
                ],
            },
            panels: [
                {
                    name: 'default',
                    label: 'Основные данные',
                    active: true,
                    fields: [
                        {
                            type: 'hidden',
                            name: 'cronSchedulerWork.id',
                            value: cronSchedulerWork.id|default(scUUID())
                        },
                        {name: 'cronSchedulerWork.status', value: cronSchedulerWork.status, type: 'input', label: 'status'},
                    ]
                }, 
                {
                    name: 'services',
                    label: 'Служебные данные',
                    fields: [
                        {
                            name: 'cronSchedulerWork.dateCreated',
                            value: cronSchedulerWork.dateCreated.format('Y-m-d H:i:s'),
                            type: 'input',
                            label: 'Дата создания',
                            disabled: true
                        },
                        {
                            name: 'cronSchedulerWork.dateModified',
                            value: cronSchedulerWork.dateCreated.format('Y-m-d H:i:s'),
                            type: 'input',
                            label: 'Дата изменения',
                            disabled: true
                        },
                    ]
                }
            ]
        }) 
    }}
{% endblock %}