{% extends setcms.path('layout_admin.twig') %}
{% import setcms.path('macros/controls.twig') as controls %}

{% block content_toolbar %}
    <a href="{{ setcms.link('action_admin', {module: 'Page', action:'new'}) }}" class="btn btn-sm btn-outline-secondary">Создать страницу</a>
{% endblock %}

{% block content_title %}Страницы{% endblock %}

{% block content %}
    <div class="table-responsive">
        <form>
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Тема</th>
                        <th scope="col">Дата создания</th>
                        <th scope="col">Дата изменения</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for page in pages %}
                        <tr>
                            <td>{{ controls.checkbox({name: 'id[]', value: page.id}) }}</td>
                            <td>{{ page.title }}</td>
                            <td>{{ page.dateCreated.format('d.m.Y H:i:s') }}</td>
                            <td>{{ page.dateModified.format('d.m.Y H:i:s') }}</td>
                            <td>
                                <a href="{{ setcms.link('action_record_admin', {'module': 'Page', action: 'edit', 'id': page.id}) }}">Редактировать</a>
                                <a href="{{ setcms.link('action_record_admin', {'module': 'Page', action: 'read', 'id': page.id}) }}">Просмотр</a>
                            </td>
                        </tr>
                    {%  endfor %}
                </tbody>
            </table>
        </form>
    </div>
{% endblock %}