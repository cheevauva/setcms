{% extends scShortPath(layout ?? 'layout_admin.twig') %}
{% import scShortPath('macros/crud.twig') as crud %}

{% block content_toolbar %}
    <a href="{{ scLink('AdminEmailNew', {'id': scUUID()}) }}" class="btn btn-sm btn-outline-secondary">Создать</a>
{% endblock %}

{% block content_title %}Email{% endblock %}

{% block content %}
    {%  
        set rows = [
            {
                type: 'header',
                columns: [
                    {
                        type: 'checkbox',
                        name: 'id',
                        value: 'selectall'
                    },
                    {
                        type: 'text',
                        value: 'Тема'
                    },
                    {
                        type: 'text',
                        value: 'Отправитель'
                    },
                    {
                        type: 'text',
                        value: 'Адресат'
                    },
                    {
                        type: 'text',
                        value: 'Статус'
                    },
                    {
                        type: 'text',
                        value: 'Дата отправки'
                    },
                    {
                        type: 'text',
                        value: 'Действия'
                    },
                ]
            }
        ]
    %}
    {% for entity in emails %}
        {%  
            set rows = rows|merge([{
                type: 'row',
                columns: [
                    {
                        name: 'id[]',
                        type: 'checkbox',
                        value: entity.id.uuid
                    },
                    {
                        type: 'text',
                        value: entity.subject
                    },
                    {
                        type: 'text',
                        value: entity.from
                    },
                    {
                        type: 'text',
                        value: entity.to
                    },
                    {
                        type: 'text',
                        value: entity.status.value
                    },
                    {
                        type: 'text',
                        value: entity.dateSent.format('Y-m-d H:i:s')
                    },
                    {
                        name: 'actions',
                        type: 'actions',
                        actions: [
                            {
                                label: 'Просмотр',
                                route: 'AdminEmailRead',
                                params: {
                                    id: entity.id
                                }
                            },
                            {
                                label: 'Редактировать',
                                route: 'AdminEmailEdit',
                                params: {
                                    id: entity.id
                                }
                            }
                        ]

                    }
                ]
            }])
        %}
    {% endfor %}

    {{ crud.listview({rows: rows})  }}
{% endblock %}
