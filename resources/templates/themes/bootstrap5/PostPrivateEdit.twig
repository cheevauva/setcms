{% extends scShortPath(layout ?? 'layout_admin.twig') %}
{% import scShortPath('macros/crud.twig') as crud %}

{% block content_title %}Создать пост{% endblock %}

{% block content %}
    {{ 
        crud.editview({
            action: scLink(entity.id ? 'AdminPostUpdate' : 'AdminPostCreate', {id: entity ? entity.id : scUUID()}),
            redirect: scLink('AdminPostRead', {id: '${entity.id.uuid}'}),
            actions: {
                fields: [
                    {
                        type: 'submit',
                        label: 'Сохранить',
                    },
                ],
            },
            panels: [
                {
                    name: 'default',
                    label: 'Основные данные',
                    active: true,
                    fields: [
                        {
                            type: 'hidden',
                            name: 'entity.id',
                            value: entity.id|default(scUUID())
                        },
                        {
                            name: 'entity.slug',
                            value: entity.slug,
                            type: 'input',
                            label: 'Псевдоним'
                        },
                        {
                            name: 'entity.title',
                            value: entity.title,
                            type: 'input',
                            label: 'Заголовок'
                        },
                        {
                            name: 'entity.message',
                            type: 'textarea',
                            value: entity.message,
                            label: 'Сообщение'
                        },
                    ]
                }, 
                {
                    name: 'services',
                    label: 'Служебные данные',
                    fields: [
                        {
                            name: 'entity.dateCreated',
                            value: entity.dateCreated.format('Y-m-d H:i:s'),
                            type: 'input',
                            label: 'Дата создания',
                            disabled: true
                        },
                        {
                            name: 'entity.dateModified',
                            value: entity.dateCreated.format('Y-m-d H:i:s'),
                            type: 'input',
                            label: 'Дата изменения',
                            disabled: true
                        },
                    ]
                }
            ]
        }) 
    }}
{% endblock %}