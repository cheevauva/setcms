{% extends scShortPath(layout ?? 'layout_admin.twig') %}
{% import scShortPath('macros/crud.twig') as crud %}

{% block content_title %}Создать пост{% endblock %}

{% block content %}
    {{ 
        crud.editview({
            action: scLink(post.id ? 'action_record_admin' : 'action_admin', {module: 'Post', action: post ? 'update': 'create', id: post.id}),
            redirect: scLink('action_record_admin', {module: 'Post', action: 'read', 'id': '${post.id.uuid}'}),
            actions: {
                fields: [
                    {
                        type: 'submit',
                        label: 'Сохранить',
                    },
                ],
            },
            panels: [
                {
                    name: 'default',
                    label: 'Основные данные',
                    active: true,
                    fields: [
                        {
                            type: 'hidden',
                            name: 'post.id',
                            value: post.id|default(scUUID())
                        },
                        {
                            name: 'post.slug',
                            value: post.slug,
                            type: 'input',
                            label: 'Псевдоним'
                        },
                        {
                            name: 'post.title',
                            value: post.title,
                            type: 'input',
                            label: 'Заголовок'
                        },
                        {
                            name: 'post.message',
                            type: 'textarea',
                            value: post.message,
                            label: 'Сообщение'
                        },
                    ]
                }, 
                {
                    name: 'services',
                    label: 'Служебные данные',
                    fields: [
                        {
                            name: 'post.dateCreated',
                            value: post.dateCreated.format('Y-m-d H:i:s'),
                            type: 'input',
                            label: 'Дата создания',
                            disabled: true
                        },
                        {
                            name: 'post.dateModified',
                            value: post.dateCreated.format('Y-m-d H:i:s'),
                            type: 'input',
                            label: 'Дата изменения',
                            disabled: true
                        },
                    ]
                }
            ]
        }) 
    }}
{% endblock %}