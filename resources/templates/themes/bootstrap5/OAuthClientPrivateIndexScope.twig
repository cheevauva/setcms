{% extends scShortPath('layout_admin.twig') %}

{% block content_toolbar %}
    <a href="{{ scLink('action_oauthclients_admin', {module: 'OAuthClient', action: 'new', 'id': scUUID()}) }}" class="btn btn-sm btn-outline-secondary">Создать запись</a>
{% endblock %}

{% block content_title %}OAuth приложения{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Название</th>
                    <th scope="col">Идентификатор приложения</th>
                    <th scope="col">Секретный ключ</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.clientId }}</td>
                        <td>{{ entity.clientSecret }}</td>
                        <td>
                            <a href="{{ scLink('action_oauthclients_record_admin', {action: 'edit', 'id': entity.id}) }}">Редактировать</a>
                            <a href="{{ scLink('action_oauthclients_record_admin', {action: 'read', 'id': entity.id}) }}">Просмотр</a>
                        </td>
                    </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
