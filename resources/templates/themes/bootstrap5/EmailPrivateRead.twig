{% extends scShortPath(layout ?? 'layout_admin.twig') %}

{% block title %}{{ options.title }} - {{ email.title }}{% endblock %}

{% block content_toolbar %}
    {% if scHasAccess('AdminEmailIndex') %}
        <a href="{{ scLink('AdminEmailIndex') }}" class="btn btn-sm btn-outline-secondary">Список</a> 
    {% endif %}
    {% if scHasAccess('AdminEmailEdit') %}
        <a href="{{ scLink('AdminEmailEdit', {id: email.id}) }}" class="btn btn-sm btn-outline-secondary">Редактировать</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% if email %}
        <article class="blog-email">
            <h2 class="blog-email-title">{{ email.title }}</h2>
            <p class="blog-email-meta"><a href="#">Admin</a> опубликовал в {{ email.dateCreated.format('H:i') }} {{ email.dateCreated.format('d.m.Y') }}</p>
            <p>
                {{ email.subject }}
            </p>
            <p>
                {{ email.body }}
            </p>
        </article>
    {% endif %}
{% endblock %}