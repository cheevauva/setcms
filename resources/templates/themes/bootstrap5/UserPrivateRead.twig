{% extends scShortPath('layout_admin.twig') %}
{% import scShortPath('macros/forms.twig') as forms %}

{% block content_title %}{{ post.title }}{% endblock %}

{% block content_toolbar %}
    <a href="{{ scLink('action_admin', {module: 'User', action: 'index'}) }}" class="btn btn-sm btn-outline-secondary">Список</a> 
    <a href="{{ scLink('action_record_admin', {module: 'User', action: 'edit', id: entity.id}) }}" class="btn btn-sm btn-outline-secondary">Редактировать</a>
{% endblock %}

{% block content %}
    <form class="setcms-form g-3" >
        {{ forms.input({entity: user, name: 'username', label: 'Пользователь'}) }}
        {{ forms.select({value: user.role.value, name: 'role', options: {'guest': 'Гость', 'entity': 'Пользователь', 'admin': 'Админ'}, label: 'Роль'}) }}
    </form>
{% endblock %}