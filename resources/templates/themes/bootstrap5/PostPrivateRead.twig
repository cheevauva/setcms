{% extends scShortPath(layout ?? 'layout_admin.twig') %}
{% import scShortPath('macros/forms.twig') as forms %}

{% block content_title %}{{ post.title }}{% endblock %}

{% block content_toolbar %}
    <a href="{{ scLink('AdminPostIndex') }}" class="btn btn-sm btn-outline-secondary">Список</a> 
    <a href="{{ scLink('AdminPostEdit', {id: post.id}) }}" class="btn btn-sm btn-outline-secondary">Редактировать</a>
{% endblock %}

{% block content %}
    <p>
        {{ post.message|raw }}
    </p>

    <p>
        {{ forms.input({name: 'dateCreated', value: post.dateCreated.format('d.m.Y H:i:s'), label: 'Дата создания', disabled: true}) }}
        {{ forms.input({name: 'dateModified', value: post.dateModified.format('d.m.Y H:i:s'), label: 'Дата модификации', disabled: true}) }}
    </p>
{% endblock %}