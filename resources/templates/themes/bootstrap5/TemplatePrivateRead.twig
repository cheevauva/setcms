{% extends scShortPath(layout ?? 'layout_admin.twig') %}

{% block title %}{{ options.title }} - {{ template.title }}{% endblock %}

{% block content_toolbar %}
    {% if scHasAccess('AdminTemplateIndex') %}
        <a href="{{ scLink('AdminTemplateIndex') }}" class="btn btn-sm btn-outline-secondary">Список</a> 
    {% endif %}
    {% if scHasAccess('AdminTemplateEdit') %}
        <a href="{{ scLink('AdminTemplateEdit', {id: template.id}) }}" class="btn btn-sm btn-outline-secondary">Редактировать</a>
    {% endif %}
{% endblock %}

{% block content %}
    {% if template %}
        <article class="blog-template">
            <h2 class="blog-template-title">{{ template.title }}</h2>
            <p class="blog-template-meta"><a href="#">Admin</a> опубликовал в {{ template.dateCreated.format('H:i') }} {{ template.dateCreated.format('d.m.Y') }}</p>
            <p>
                {{ template.template }}
            </p>
        </article>
    {% endif %}
{% endblock %}