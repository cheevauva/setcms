<!doctype html>
<html>
    {% set theme = "bootstrap5" %}
    {% set options = scFetch('/sub/configurations/main')  %}
    <head>
        <title>{% block title %}{{ options.title }}{% endblock %}</title>
        <meta name="description" content="{{ options.description }}"/>
        <meta name="keywords" content="{% block keywords %}{{ options.keywords }}{% endblock %}"/>
        <base href="{{ scBaseUrl() }}"/>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            .bd-placeholder-img {
                font-size: 1.125rem;
                text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
            }

            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                    font-size: 3.5rem;
                }
            }
        </style>
    </head>
    <body>
        <div class="container">
            <header class="blog-header py-3">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        {% if options.main_page_show %}
                            <a class="navbar-brand" href="{{ scLink(options.main_page_path) }}">{{ options.main_page_label }}</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        {% endif %}
                        {{ scRender('/block/PublicMainMenu.twig', scCall('/menu/for/main')) }}
                    </div>
                </nav>
            </header>
            {{ scRender('/block/PublicSubMainMenu.twig', scCall('/menu/for/submain')) }}
        </div>
        <main class="container">
            <div class="row g-5">
                <div class="col-md-8">
                    {% block content %}{% endblock %}
                </div>
                <div class="col-md-4">
                    {{ scRender('/block/PublicContextActions.twig', scCall('/menu/for/context')) }}
                </div>
            </div>
        </main>
    </body>
    {% include scShortPath('assets.twig') %}
    {% block styles %}{% endblock %}
    {% block javascript %}{% endblock %}

</html>
