{% extends setcms.path('layout_admin.twig') %}

{% block content_toolbar %}
    <a href="{{ setcms.link('action_admin', {module: setcms.currentModule, action:'save'}) }}" class="btn btn-sm btn-outline-secondary">Добавить блок</a>
{% endblock %}

{% block content_title %}Блоки{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Название</th>
                    <th scope="col">Блок</th>
                    <th scope="col">Сторона</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.block }}</td>
                        <td>{{ entity.side }}</td>
                        <td>
                            <a href="{{ setcms.link('action_record_admin', {'module': setcms.toModule(entity), action: 'save', 'id': entity.id}) }}">Редактировать</a>
                        </td>
                    </tr>
                {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
